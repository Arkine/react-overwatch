{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "expect": true,
        "assert": true
    },
    "rules": {
        "constructor-super": ["error"],
        "eqeqeq": ["error", "smart"],
        "indent": ["error", "tab", { "SwitchCase": 1 }],
        "no-unused-vars": ["warn", { "vars": "local", "args": "none", "varsIgnorePattern": "^React$" }],
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "semi": ["error", "always"],
        "flowtype/use-flow-type": "error",
        "react/jsx-uses-vars": "warn"
    },
    "plugins": [
        "react",
        "flowtype"
    ]
}